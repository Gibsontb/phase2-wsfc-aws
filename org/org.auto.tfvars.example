# Author: tgibson
# Master switch
apply_scps = true

# Attach to Root by default (auto-detected). Set target_id for a specific OU:
# target_id = "ou-xxxx-xxxxxxxx"

# Provider region (Organizations is global; pick any consistent region)
# org_region = "us-east-1"

# Region guardrail (optional)
enable_deny_not_allowed_regions = true
allowed_regions = ["us-east-1", "us-east-2"]

# Require tags on create (optional)
enable_require_tags = true
required_tag_keys   = ["Project", "Environment", "Owner", "CostCenter"]

# No EC2 public IPs (optional)
enable_deny_public_ip_instances = true

# Block open SSH/RDP (optional)
enable_deny_open_ssh_rdp = true

# Prevent public RDS (optional)
enable_deny_rds_public = true
